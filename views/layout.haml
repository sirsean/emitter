%html
    %head
        %title="Emitter"
        %link{:rel => "stylesheet", :type => "text/css", :href => "/css/main.css"}
    %body
        #header
            %h1="Emitter"
            - if @session
                %a{:href => "/home/"}="Home"
                %a{:href => "/logout/"}="Logout"
            - else
                %a{:href => "/login/"}="Login"
                or
                %a{:href => "/signup/"}="Signup"

        #main_container
            = yield

        #sidebar
            - if @user
                %p
                    %a{:href => "/user/#{@user["username"]}/following/"}="Following (#{@user["following"].length})"
                %p
                    %a{:href => "/user/#{@user["username"]}/followers/"}="Followers (#{@user["followers"].length})"

        .clear

        #footer
            %p="&copy; 2010, Sean Schulte"
