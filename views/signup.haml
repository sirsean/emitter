
= display_errors(@errors)

#signup_form
    %form{:action=>"/signup", :method=>"post"}
        %p
            Username:
            %input{:type => "text", :name => "username", :value => @username, :tabindex => 1}
        %p
            Password:
            %input{:type => "password", :name => "password1", :tabindex => 2}
        %p
            Repeat Password:
            %input{:type => "password", :name => "password2", :tabindex => 3}
        %p
            Email:
            %input{:type => "text", :name => "email", :value => @email, :tabindex => 4}
        %p
            Full Name:
            %input{:type => "text", :name => "pretty_name", :value => @pretty_name, :tabindex => 5}
        %p
            %input{:type => "submit", :value => "Signup"}

